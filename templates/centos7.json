{
    "variables": {
        "atlas_token": null,
        "atlas_name": "CentOS Linux 7 (1511)",
        "atlas_short_description": "CentOS Linux 7",
        "atlas_username": null,
        "atlas_version": "{{isotime \"2006\"}}.{{isotime \"01\"}}.{{isotime \"02\"}}",
        "headless": "true",
        "iso_sha256sum": "54721e5e444a3191b18b0fabe1c35e12b65f93aa31732beb7899212d19cab69b",
        "iso_url": "http://buildlogs.centos.org/rolling/7/isos/x86_64/CentOS-7-x86_64-Minimal-1609-01.iso",
        "parallels_tools_version": null,
        "virtualbox_additions_version": null,
        "vmware_tools_version": null
    },
    "builders": [
        {
            "type": "parallels-iso",
            "name": "centos7-parallels",
            "ssh_username": "root",
            "ssh_password": "packer",
            "ssh_timeout": "10m",
            "boot_command": [
                "<tab><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "hostname=centos7 ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg<enter><wait>"
            ],
            "boot_wait": "5s",
            "disk_size": 49152,
            "guest_os_type": "centos7",
            "hard_drive_interface": "sata",
            "http_directory": "http/centos7",
            "iso_checksum": "{{user `iso_sha256sum`}}",
            "iso_checksum_type": "sha256",
            "iso_url": "{{user `iso_url`}}",
            "parallels_tools_flavor": "lin",
            "parallels_tools_guest_path": "/dev/shm/prl-tools-{{.Flavor}}.iso",
            "prlctl": [
                [ "set", "{{.Name}}", "--device-set", "cdrom0", "--iface", "ide" ],
                [ "set", "{{.Name}}", "--device-add", "hdd", "--type", "expand", "--size", "1024", "--iface", "sata" ],
                [ "set", "{{.Name}}", "--device-set", "cdrom0", "--iface", "sata" ],
                [ "set", "{{.Name}}", "--device-del", "sound0" ],
                [ "set", "{{.Name}}", "--device-del", "usb" ],
                [ "set", "{{.Name}}", "--videosize", "2" ]
            ],
            "shutdown_command": "halt -p",
            "vm_name": "centos7"
        },
        {
            "type": "qemu",
            "name": "centos7-libvirt",
            "ssh_username": "root",
            "ssh_password": "packer",
            "ssh_timeout": "10m",
            "accelerator": "kvm",
            "boot_command": [
                "<tab><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "hostname=centos7 ks=http://{{.HTTPIP}}:{{.HTTPPort}}/libvirt.cfg<enter><wait>"
            ],
            "boot_wait": "5s",
            "disk_size": 49152,
            "headless": "{{user `headless`}}",
            "http_directory": "http/centos7",
            "iso_checksum": "{{user `iso_sha256sum`}}",
            "iso_checksum_type": "sha256",
            "iso_url": "{{user `iso_url`}}",
            "machine_type": "q35",
            "qemuargs": [
                [ "-m", "512" ]
            ],
            "shutdown_command": "halt -p",
            "vm_name": "centos7"
        },
        {
            "type": "virtualbox-iso",
            "name": "centos7-virtualbox",
            "ssh_username": "root",
            "ssh_password": "packer",
            "ssh_timeout": "10m",
            "boot_command": [
                "<tab><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "hostname=centos7 ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg<enter><wait>"
            ],
            "boot_wait": "5s",
            "disk_size": 49152,
            "guest_additions_path": "/dev/shm/VBoxGuestAdditions.iso",
            "guest_os_type": "RedHat_64",
            "hard_drive_interface": "sata",
            "headless": "{{user `headless`}}",
            "http_directory": "http/centos7",
            "iso_checksum": "{{user `iso_sha256sum`}}",
            "iso_checksum_type": "sha256",
            "iso_url": "{{user `iso_url`}}",
            "shutdown_command": "halt -p",
            "vboxmanage": [
                [ "modifyvm", "{{.Name}}", "--vram", "5", "--rtcuseutc", "on", "--chipset", "ich9", "--nictype1", "virtio", "--audio", "none", "--usb", "off", "--usbehci", "off" ],
                [ "createhd", "--format", "VDI", "--filename", "output-{{build_name}}/{{.Name}}-1.vdi", "--size", "1024" ],
                [ "storageattach", "{{.Name}}", "--storagectl", "SATA Controller", "--port", "1", "--device", "0", "--type", "hdd", "--medium", "output-{{build_name}}/{{.Name}}-1.vdi" ]
            ],
            "vboxmanage_post": [
                [ "storagectl", "{{.Name}}", "--name", "IDE Controller", "--remove" ],
                [ "modifyhd", "output-{{build_name}}/{{.Name}}.vdi", "--compact" ],
                [ "modifyhd", "output-{{build_name}}/{{.Name}}-1.vdi", "--compact" ]
            ],
            "vm_name": "centos7"
        },
        {
            "type": "vmware-iso",
            "name": "centos7-vmware",
            "ssh_username": "root",
            "ssh_password": "packer",
            "ssh_timeout": "10m",
            "boot_command": [
                "<tab><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "hostname=centos7 ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg<enter><wait>"
            ],
            "boot_wait": "5s",
            "disk_additional_size": [ 1024 ],
            "disk_size": 49152,
            "guest_os_type": "rhel7-64",
            "headless": "{{user `headless`}}",
            "http_directory": "http/centos7",
            "iso_checksum": "{{user `iso_sha256sum`}}",
            "iso_checksum_type": "sha256",
            "iso_url": "{{user `iso_url`}}",
            "shutdown_command": "halt -p",
            "tools_upload_flavor": "linux",
            "tools_upload_path": "/dev/shm/{{.Flavor}}.iso",
            "vm_name": "centos7",
            "vmx_data": {
                "ethernet0.virtualdev": "vmxnet3",
                "memsize": "512",
                "scsi0.virtualdev": "pvscsi"
            },
            "vmx_data_post": {
                "ide1:0.present": "FALSE"
            },
            "vmdk_name": "centos7"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "scripts/centos7.sh"
            ],
            "remote_path": "/dev/shm/script.sh"
        }
    ],
    "post-processors": [
        [
            {
                "type": "vagrant",
                "compression_level": 9,
                "output": "{{.BuildName}}.box",
                "override": {
                    "virtualbox": {
                        "vagrantfile_template": "vagrant/virtualbox"
                    },
                    "vmware": {
                        "vagrantfile_template": "vagrant/vmware"
                    }
                }
            },
            {
                "type": "atlas",
                "only": [ "centos7-parallels" ],
                "token": "{{user `atlas_token`}}",
                "artifact": "{{user `atlas_username`}}/centos7",
                "artifact_type": "vagrant.box",
                "metadata": {
                    "description": "{{user `atlas_name`}} (x86_64)\n\nCore installation with guest extensions:\n- Parallels Tools {{user `parallels_tools_version`}}\n- VirtualBox Guest Additions {{user `virtualbox_additions_version`}}\n- VMware Tools {{user `vmware_tools_version`}}\n\nPackages are current as of {{isotime \"2006-01-02\"}}.\n\nhttps://github.com/wholebits/baseboxes",
                    "provider": "parallels",
                    "short_description": "{{user `atlas_short_description`}} (x86_64)",
                    "version": "{{user `atlas_version`}}"
                }
            },
            {
                "type": "atlas",
                "only": [ "centos7-libvirt" ],
                "token": "{{user `atlas_token`}}",
                "artifact": "{{user `atlas_username`}}/centos7",
                "artifact_type": "vagrant.box",
                "metadata": {
                    "description": "{{user `atlas_name`}} (x86_64)\n\nCore installation with guest extensions:\n- Parallels Tools {{user `parallels_tools_version`}}\n- VirtualBox Guest Additions {{user `virtualbox_additions_version`}}\n- VMware Tools {{user `vmware_tools_version`}}\n\nPackages are current as of {{isotime \"2006-01-02\"}}.\n\nhttps://github.com/wholebits/baseboxes",
                    "provider": "libvirt",
                    "short_description": "{{user `atlas_short_description`}} (x86_64)",
                    "version": "{{user `atlas_version`}}"
                }
            },
            {
                "type": "atlas",
                "only": [ "centos7-virtualbox" ],
                "token": "{{user `atlas_token`}}",
                "artifact": "{{user `atlas_username`}}/centos7",
                "artifact_type": "vagrant.box",
                "metadata": {
                    "description": "{{user `atlas_name`}} (x86_64)\n\nCore installation with guest extensions:\n- Parallels Tools {{user `parallels_tools_version`}}\n- VirtualBox Guest Additions {{user `virtualbox_additions_version`}}\n- VMware Tools {{user `vmware_tools_version`}}\n\nPackages are current as of {{isotime \"2006-01-02\"}}.\n\nhttps://github.com/wholebits/baseboxes",
                    "provider": "virtualbox",
                    "short_description": "{{user `atlas_short_description`}} (x86_64)",
                    "version": "{{user `atlas_version`}}"
                }
            },
            {
                "type": "atlas",
                "only": [ "centos7-vmware" ],
                "token": "{{user `atlas_token`}}",
                "artifact": "{{user `atlas_username`}}/centos7",
                "artifact_type": "vagrant.box",
                "metadata": {
                    "description": "{{user `atlas_name`}} (x86_64)\n\nCore installation with guest extensions:\n- Parallels Tools {{user `parallels_tools_version`}}\n- VirtualBox Guest Additions {{user `virtualbox_additions_version`}}\n- VMware Tools {{user `vmware_tools_version`}}\n\nPackages are current as of {{isotime \"2006-01-02\"}}.\n\nhttps://github.com/wholebits/baseboxes",
                    "provider": "vmware_desktop",
                    "short_description": "{{user `atlas_short_description`}} (x86_64)",
                    "version": "{{user `atlas_version`}}"
                }
            }
        ]
    ]
}
